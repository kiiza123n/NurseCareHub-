    function getAnswer() {
      const question = document.getElementById("question").value.toLowerCase();
      let answer = "Sorry, I don't understand that yet. Please try another question.";

      if (question.includes("paracetamol")) {
        answer = "Paracetamol dosage for children is 10‚Äì15 mg/kg every 4‚Äì6 hours. Max 5 doses/day.";
      } else if (question.includes("iron")) {
        answer = "Iron supplements are commonly used to treat anemia. Usual dose: 60‚Äì120 mg/day.";
      } else if (question.includes("immunization")) {
        answer = "Uganda EPI schedule includes BCG, Polio, DPT-HepB-Hib, Measles, HPV, etc.";
      }

      document.getElementById("answer").innerText = answer;
    }
